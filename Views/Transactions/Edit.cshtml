@model FinalProject.Models.Transaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionID" />

            <div class="form-group">
                <label asp-for="TransactionStatus" class="control-label"></label>
                <select asp-for="TransactionStatus" class="form-control" disabled="@(Model.TransactionStatus == TransactionStatus.Cancelled)">
                    <option value="@TransactionStatus.Purchased">Purchased</option>
                    <option value="@TransactionStatus.Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="TransactionStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" disabled="@(Model.TransactionStatus == TransactionStatus.Cancelled)" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
